class Solution {
    public boolean isSubsequence(String s, String t) {
        
        if(s.length() == 0) return true;

        int i = 0;
        char c = s.charAt(i);

        for(int j = 0; j < t.length(); j++){
            if(c == t.charAt(j)){
                i++;

                if(i == s.length()){
                    return true;
                }
                c = s.charAt(i);
            }
        }

        return i == s.length();
    }
}
