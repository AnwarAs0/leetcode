class Solution {
    public boolean isSubsequence(String s, String t) {
        int sLen = s.length();
        int tLen = t.length();

        if(sLen == 0) return true;

        int i = 0;
        char c = s.charAt(i);

        for(int j = 0; j < tLen; j++){
            if(c == t.charAt(j)){
                i++;

                if(i == sLen){
                    return true;
                }
                c = s.charAt(i);
            }
        }

        return i == sLen;
    }
}
